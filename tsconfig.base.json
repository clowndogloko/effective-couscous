{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2021",
    "module": "esnext",
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "@lerna/core": ["libs/core/src/index.ts"],
      "@lerna/e2e-utils": ["libs/e2e-utils/src/index.ts"],
      "@lerna/nx-plugin": ["libs/nx-plugin/src/index.ts"],
      "@lerna/publish": ["commands/publish/index.js"],
      "@lerna/test-helpers": ["libs/test-helpers/src/index.ts"],
      "@lerna/test-helpers/*": ["libs/test-helpers/*"],
      "@lerna/version": ["commands/version/index.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
